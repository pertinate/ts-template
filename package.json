{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "Template for a basic typescript project",
  "main": "index.js",
  "scripts": {
    "test": "jest --verbose --collectCoverage",
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn src/index.ts",
    "dev:container": "docker run --rm -it --name node-docker -v $PWD:/home/node/app -w /home/node/app -e \"PORT=8080\" -p 8080:8080 -u node node:latest /bin/bash"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.10",
    "@types/supertest": "^2.0.10",
    "supertest": "^5.0.0",
    "jest": "^26.5.3",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pertinate/ts-template.git"
  },
  "bugs": {
    "url": "https://github.com/pertinate/ts-template/issues"
